<% if line_item == @current_item %>
<tr id="current_item <%= line_item.id %>">
<% else %>
<tr id="<%= line_item.id %>">
<% end %>
  <td>
    <%= line_item.quantity %>&times;
  </td>
  <td>
    <%= line_item.product.title %>
  </td>
  <td class="item_price">
    <%= number_to_currency(line_item.total_price) %>
  </td>
  <td>
    <%= button_to 'Remove Item', line_item, method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
